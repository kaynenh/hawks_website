<ul class="archives sidebar-menu">

    {% for month,items in archives_data %}
        {% set first_month = (current_month[0]|replace({'_':''})|date("F Y")) %}
        {% set current_page = (month|date('M_Y')|lower|e('url') == current_month[0]) ? 'active' : '' %}
        <li class="{{ current_page }}">
            <a href="{{ base_url }}/archives_month{{ config.system.param_sep }}{{ month|date('M_Y')|lower|e('url') }}">
                {#{% if archives_show_count %}
                    <span class="label">{{ items|length }}</span>
                {% endif %}#}
                <span class="archive_date">{{ month }}</span>
            </a>
        </li>
    {% endfor %}
</ul>
